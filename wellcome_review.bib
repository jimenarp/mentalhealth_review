	institution = {PEP-PIERI},
	author = {Olajide, Damilola and Alzua, Maria Laura and Dammert, Ana and Sotola, Olusegun and Ayodele, Thompson},
	year = {2016},
	keywords = {randomized control trial, aging challenge, Ekiti State, Nigeria., non-contributory elderly pensions, unconditional cash transfer},
