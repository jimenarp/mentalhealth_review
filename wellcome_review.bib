@article{haushofer_johannes_comparative_2020,
	title = {The {Comparative} {Impact} of {Cash} {Transfers} and {Psychotherapy} on {Psychological} and {Economic} {Well}-being},
	abstract = {We study the effects of a USD 1076 PPP (USD 485 nominal) unconditional cash transfer, a five-week psychotherapy treatment, and the combination of both interventions on economic and psychological well-being among 5,756 individuals in rural Kenya using a randomized controlled trial. One year after the interventions, cash transfer recipients have higher consumption, asset holdings, and revenue, as well as higher levels of psychological well-being and mental health, than control households who did not receive an intervention. In contrast, psychotherapy has no measurable effects on either psychological or economic outcomes at this time horizon, and we can rule out relatively modest positive treatment effects. This was true both for individuals with low mental health at baseline and others. In line with these findings, the effects of the combined treatment are similar to those of the cash transfer alone. Because the cash transfer was cheaper than the psychotherapy, it was more cost-effective in improving both economic and psychological outcomes than psychotherapy.},
	author = {Haushofer, Johannes and Mudida, Robert and Shapiro, Jeremy},
	year = {2020}
}

